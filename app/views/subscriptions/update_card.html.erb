<%= javascript_include_tag "https://js.stripe.com/v2/" %>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_tag "/subscriptions/update_card_details", id: "payment-form" do%>
      <span class="payment-errors text-danger"></span>

      <div class="form-group">
        <label for="number">Card Number</label>
        <input type="text" size="20" class="form-control" id="number" data-stripe="number">
      </div>

      <label for="exp">Expiration (MM/YY)</label>
      <div class="form-group">
        <div>
          <input type="text" size="2" class="form-control exp-field" id="exp" data-stripe="exp_month">
          <span> / </span>
          <input type="text" size="2" class="form-control exp-field" data-stripe="exp_year">
        </div>
      </div>

      <div class="form-group">
        <label for="cvc">CVC</label>
        <input type="text" size="4" class="form-control" id="cvc" data-stripe="cvc">
      </div>

      <input type="submit" class="submit btn btn-primary" value="Submit Payment">
    <% end %>
  </div>
</div>

<script type="text/javascript">
